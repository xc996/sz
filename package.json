{
  "name": "sz-tourism-site",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/copy-static.mjs && node scripts/write-version.mjs",
    "audit": "node scripts/audit-links.mjs --origin https://xc996.github.io --base /sz --fail-on-404",
    "preview": "vite preview",
    "preview:gh": "node scripts/gh-pages-local.mjs",
    "validate:all": "node scripts/validate-all.mjs",
    "validate:local-only": "node scripts/validate-all.mjs --local",
    "validate:github-only": "node scripts/validate-all.mjs --github",
    "validate:cloudflare-only": "node scripts/validate-all.mjs --cloudflare",
    "validate:fast": "NO_WAIT_VERSION=true FORCE_REMOTE=true CONCURRENCY=32 TIMEOUT_MS=5000 node scripts/validate-all.mjs",
    "validate:remote-fast": "NO_WAIT_VERSION=true FORCE_REMOTE=true CONCURRENCY=32 TIMEOUT_MS=5000 node scripts/validate-all.mjs --github --cloudflare",
    "tool": "node scripts/cli.mjs",
    "tool:preview": "node scripts/cli.mjs preview-gh",
    "tool:validate": "node scripts/cli.mjs validate:all",
    "tool:remote-fast": "node scripts/cli.mjs validate:remote-fast",
    "test": "vitest",
    "cf:dev": "wrangler dev",
    "cf:publish": "wrangler deploy",
    "pages:dev": "wrangler pages dev dist",
    "pages:publish": "wrangler pages publish dist"
  },
  "dependencies": {
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "jsdom": "^27.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.5.0",
    "wrangler": "^3.49.0"
  }
}
